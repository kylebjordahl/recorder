{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es2016",
		"noImplicitAny": false,
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"outDir": "dist",
		"lib": [
			"esnext"
		],
		"typeRoots": [
			"types"
		]
	},
	"exclude": [
		"node_modules",
		"examples",
		"dist",
		"tests"
	]
}